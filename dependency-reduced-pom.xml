<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>me.redstoner2019</groupId>
  <artifactId>LWJGL</artifactId>
  <version>1.3.0-alpha.2</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <mainClass>me.redstoner2019.fnaf.FNAFMain</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>me.redstoner2019.fnaf.FNAFMain</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>Linux-x64</id>
      <build>
        <finalName>FiveNightsAtFreddys-linux-x64</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-linux</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>Linux-arm64</id>
      <build>
        <finalName>FiveNightsAtFreddys-linux-arm64</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-linux-arm64</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>Linux-arm32</id>
      <build>
        <finalName>FiveNightsAtFreddys-linux-arm32</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-linux-arm32</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>MacOS-x64</id>
      <build>
        <finalName>FiveNightsAtFreddys-macos</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-macos</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>MacOS-arm64</id>
      <build>
        <finalName>FiveNightsAtFreddys-macos-arm64</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-macos-arm64</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>Windows-x64</id>
      <build>
        <finalName>FiveNightsAtFreddys-windows-x64</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-windows</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>Windows-x86</id>
      <build>
        <finalName>FiveNightsAtFreddys-windows-x86</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-windows-x86</lwjgl.natives>
      </properties>
    </profile>
    <profile>
      <id>Windows-arm64</id>
      <build>
        <finalName>FiveNightsAtFreddys-windows-arm64</finalName>
      </build>
      <properties>
        <lwjgl.natives>natives-windows-arm64</lwjgl.natives>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>github</id>
      <url>https://maven.pkg.github.com</url>
    </repository>
  </repositories>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.lwjgl</groupId>
        <artifactId>lwjgl-bom</artifactId>
        <version>${lwjgl.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <distributionManagement>
    <repository>
      <id>releases</id>
      <name>FNaF</name>
      <url>https://maven.pkg.github.com/Redstoner-2019/FNaF</url>
    </repository>
  </distributionManagement>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <maven.compiler.source>17</maven.compiler.source>
    <joml-primitives.version>1.10.0</joml-primitives.version>
    <lwjgl3-awt.version>0.1.8</lwjgl3-awt.version>
    <lwjgl.natives>natives-windows</lwjgl.natives>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <joml.version>1.10.5</joml.version>
    <lwjgl.version>3.3.3</lwjgl.version>
  </properties>
</project>
